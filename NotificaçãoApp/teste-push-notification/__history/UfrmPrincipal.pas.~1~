unit UfrmPrincipal;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, UClasses.MyNotification;

type
  TForm1 = class(TForm)
  private
   procedure SetNotification(const aMessage: string);

    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.fmx}

{ TForm1 }

procedure SetNotification(const aMessage: string);
begin
  var vNotifiCenter:= TNotificationCenter.Create(nil);
  try
    var vNotification:= vNotifiCenter.CreateNotification;
    try
      vNotification.AlertBody:= aMessage;
      vNotification.FireDate:= Now;
      vNotifiCenter.PresentNotification(vNotification);
    finally
      vNotification.Free;
    end;
  finally
    vNotifiCenter.Free;
  end;
end;


end.
