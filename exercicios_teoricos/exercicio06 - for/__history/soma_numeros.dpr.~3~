program soma_numeros;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
  xQtdEntrada: Integer;
  xNumero: Integer;
  I: Integer;
  xSoma: Integer;
begin
  try
  xSoma := 0;

  WriteLn('Digite o total de números:');
  ReadLn(xQtdEntrada);

  for I := 0 to xQtdEntrada-1 do
  begin
    WriteLn('Entre com o ' + IntToStr(I+1) + ' nº: ');
    ReadLn(xNumero);

    xSoma := xSoma + xNumero;
  end;

  WriteLn('A soma é: ' + IntToStr(xSoma));
  ReadLn;
  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
end.
