unit entreosvalores;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    edt_num: TEdit;
    btn_descobrir: TButton;
    //procedure btn_descobrirClick(Sender: TObject);
    procedure edt_numChange(Sender: TObject);
  private
    procedure EntreOsValores;
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

{ TForm1 }

procedure TForm1.edt_numChange(Sender: TObject);
begin
  EntreOsvalores
end;

procedure TForm1.EntreOsValores;
var
  xnum1 : Integer;

  begin
    xnum1 := StrToInt(edt_num.text);

    if (xnum1>100) and (xnum1<200) then
      showmessage('Está entre 100 e 200')

    else
      showmessage('Não está entre 100 e 200');

  end;


end.
