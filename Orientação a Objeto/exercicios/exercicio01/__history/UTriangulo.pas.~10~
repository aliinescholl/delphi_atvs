unit UTriangulo;

interface

type
  TTriangulo = class
    private
    Fa : Double;
    Fb : Double;
    Fc : Double;
    public
    function Area: Double;

    property A : DOuble read GetA write SetA;
  end;

implementation

{ TTtriangulo }

function TTriangulo.Area: Double;
var
  xP:Double;
begin
  xP := (a + b + c) / 2;
  Result :=  Sqrt (xP * (xP - a ) * (xP - b) * (xP-c));
end;

end.
